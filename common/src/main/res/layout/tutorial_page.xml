<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
    android:id="@+id/tutorialImage"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="80dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/majorText"
        android:layout_below="@+id/tutorialImage"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:textSize="22sp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:text="visiting the listing office"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minorText"
        android:layout_below="@+id/majorText"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:text="this is tip. Do something"
        android:textColor="@color/colorWhite"/>
</merge>
