<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="@color/colorPrimaryText"
        android:lineSpacingExtra="5sp"
        android:text="Elevation Info"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        >

        <ImageView
            android:padding="9dp"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/bg_custom_tile"
            android:id="@+id/typeIcon" />

        <TextView
            android:id="@+id/instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/typeIcon"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="31dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/colorPrimaryText"
            android:lineSpacingExtra="4sp"
            android:text="Update elevation info for this building"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:background="@drawable/bg_notes_edit_box"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="31dp"
        android:layout_marginTop="21dp"
        >

        <EditText
            android:id="@+id/notes_edit_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/transparent"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="26dp">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#007ccf"
            android:letterSpacing="0.04"
            android:gravity="center_horizontal"
            android:text="NOT NOW"
            android:layout_marginRight="29dp"
            />

        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#007ccf"
            android:letterSpacing="0.04"
            android:gravity="center_horizontal"
            android:text="SUBMIT"
            android:layout_toRightOf="@+id/cancel"
            android:layout_marginRight="31dp"            />
    </RelativeLayout>

</LinearLayout>