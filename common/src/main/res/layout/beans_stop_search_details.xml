<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_details_panel"
    android:elevation="5dp"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/beans_data_panel"
            android:layout_marginBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <RelativeLayout
                    android:id="@+id/bubble_1"
                    android:layout_width="0dp"
                    android:layout_height="114dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_sub_panel_bubble">

                    <ImageView
                        android:id="@+id/bubble_icon_1"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="21dp"
                        android:background="@drawable/bg_custom_tile"
                        android:padding="10dp" />

                    <TextView
                        android:id="@+id/bubble_label_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bubble_icon_1"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="16dp"
                        android:fontFamily="sans-serif"
                        android:singleLine="true"
                        android:text="2nd"
                        android:textColor="#0a2239"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/bubble_2"
                    android:layout_width="0dp"
                    android:layout_height="114dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_sub_panel_bubble">

                    <ImageView
                        android:id="@+id/bubble_icon_2"
                        android:padding="10dp"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="21dp"
                        android:background="@drawable/bg_custom_tile"/>

                    <TextView
                        android:id="@+id/bubble_label_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="#0a2239"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/bubble_icon_2"
                        android:layout_marginTop="16dp"
                        android:singleLine="true"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bubble_3"
                    android:layout_width="0dp"
                    android:layout_height="114dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_sub_panel_bubble">

                    <ImageView
                        android:id="@+id/bubble_icon_3"
                        android:padding="10dp"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="21dp"
                        android:background="@drawable/bg_custom_tile"/>

                    <TextView
                        android:id="@+id/bubble_label_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="#0a2239"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/bubble_icon_3"
                        android:layout_marginTop="16dp"
                        android:singleLine="true"
                        />

                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/crimeAndTipsPanel"
            android:layout_below="@+id/beans_data_panel"
            android:background="@drawable/bg_sub_panel"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingTop="23dp"
            android:paddingBottom="23dp"
            android:layout_marginBottom="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:id="@+id/crimeSliderPanel"
                android:layout_marginLeft="17.5dp"
                android:layout_marginRight="21dp"
                android:layout_marginBottom="18dp"
                >

                <ImageView
                    android:padding="10dp"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_custom_tile"
                    android:layout_marginTop="5dp"
                    android:id="@+id/crimeIcon"
                    />
                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/crimeProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_marginRight="78dp"
                    android:layout_marginLeft="14dp"
                    android:progress="20"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/progress_bar"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/crimeIcon"/>

                <TextView
                    android:id="@+id/crimeLevelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#0a2239"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="top"
                    android:text="LOW"
                    />

                <TextView
                    android:id="@+id/crimeLevelTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@+id/crimeIcon"
                    android:layout_alignParentTop="true"
                    android:includeFontPadding="false"
                    android:fontFamily="sans-serif"
                    android:letterSpacing="0.01"
                    android:text="Crime Index"
                    android:textColor="#8e8e93"
                    android:textSize="14sp"
                    android:textStyle="normal" />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:id="@+id/tipsSliderPanel"

                android:layout_marginLeft="17.5dp"
                android:layout_marginRight="21dp"
                android:layout_below="@id/crimeSliderPanel"
                android:background="@drawable/bg_sub_panel">

                <ImageView
                    android:padding="10dp"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_custom_tile"
                    android:layout_marginTop="5dp"
                    android:id="@+id/tipsIcon"
                    />
                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/tipsProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:progress="50"
                    android:layout_marginRight="78dp"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"
                    android:progressDrawable="@drawable/progress_bar"

                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_toRightOf="@+id/tipsIcon"/>

                <TextView
                    android:id="@+id/tipsLevelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#0a2239"
                    android:gravity="end"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="LOW"
                    />

                <TextView
                    android:id="@+id/tipsLevelTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@+id/tipsIcon"
                    android:layout_alignParentTop="true"
                    android:includeFontPadding="false"
                    android:fontFamily="sans-serif"
                    android:letterSpacing="0.01"
                    android:text="Tipping Info"
                    android:textColor="#8e8e93"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notesPanel"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="8dp"
            android:paddingTop="23dp"
            android:layout_below="@id/crimeAndTipsPanel"
            android:background="@drawable/bg_sub_panel"                >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notesInnerPanel"
                android:layout_marginLeft="17.5dp"
                android:layout_marginRight="21dp"
                android:layout_marginBottom="18dp"
                >
                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:id="@+id/notesIcon"
                    android:background="@drawable/notes"/>

                <TextView
                    android:id="@+id/note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/notesIcon"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_horizontal"
                    android:letterSpacing="0.04"
                    android:textColor="#007ccf"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:hint="Add a Note" />


            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>